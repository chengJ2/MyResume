<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/index4layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical" >

    <include layout="@layout/top_title_layout" />

    <ImageView
        style="@style/main_icon_style"
        android:src="@drawable/main_index_icon4" />

     <com.me.resume.views.CommScrollView
        style="@style/main_scrollview_style">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/margin_20"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/index_4_info1"
	            style="@style/main_common_padding_text" />
	
	        <TextView
	            android:id="@+id/index_4_info2"
	            style="@style/main_common_padding_text" />
	
	        <TextView
	            android:id="@+id/index_4_info3"
	            style="@style/main_common_padding_text" />
	
	        <TextView
	            android:id="@+id/index_4_info4"
	            style="@style/main_common_padding_text" />
	
	        <TextView
	            android:id="@+id/index_4_info5"
	            style="@style/main_common_padding_text" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
	
	            <TextView
	                style="@style/main_common_padding_text"
	                android:layout_width="wrap_content"
	                android:text="@string/ji_info_curworkingstate" />
	
	            <TextView
	                android:id="@+id/index_4_info6"
	                style="@style/main_common_padding_text"
	                android:paddingLeft="0dip" />
	        </LinearLayout>
	    </LinearLayout>
    </com.me.resume.views.CommScrollView>

</LinearLayout>