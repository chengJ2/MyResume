<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/msgText"
        style="@style/comm_nodata_style"
        android:visibility="gone" />

    <com.me.resume.views.CommScrollView
        style="@style/comm_scrollview_style"
        android:layout_marginBottom="0dip" >

        <LinearLayout
            android:id="@+id/viewlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible" >

            <com.me.resume.views.MarqueeText
                android:id="@+id/topic_title"
                android:layout_width="200dip"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="2016求职找工作的8条经验"
                android:textColor="@color/black"
                android:textSize="@dimen/small_middle_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/topic_from"
                    style="@style/user_center_text"
                    android:text="武汉市"
                    android:textColor="@color/grey_10"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/topic_datetime"
                    style="@style/user_center_text"
                    android:layout_marginLeft="20dip"
                    android:text="2016.5.10"
                    android:textColor="@color/grey_10"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <ImageView
                android:id="@+id/topic_frompic"
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:layout_marginTop="@dimen/margin_10"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/topic_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:lineSpacingExtra="3dip"
                android:padding="5dip"
                android:text="         2016求职找工作的8条经验2016求职找工作的8条经验2016求职找工作的8条经验2016求职找工作的8条经验2016求职找工作的8条经验2016求职找工作的8条经验"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>
    </com.me.resume.views.CommScrollView>

</LinearLayout>