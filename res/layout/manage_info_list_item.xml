<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/manager_bg_item_on"
    android:orientation="vertical" >

     <TextView
       android:id="@+id/item1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center|left"
       android:padding="@dimen/margin_8"
       android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
       android:textColor="@color/black"
       android:textSize="@dimen/small_text_size" />
          
    <TextView
        android:id="@+id/item11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingTop="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:text="@string/resume_workexperience"
        android:textColor="@color/grey_10"
        android:textSize="@dimen/small_text_size"
        android:lineSpacingExtra="3dip" />
    
    <TextView
        android:id="@+id/item12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingTop="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_8"
        android:text="@string/resume_workexperience"
        android:textColor="@color/grey_10"
        android:textSize="@dimen/small_text_size"
        android:lineSpacingExtra="3dip" />

    <View style="@style/line_padding10_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item21"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_delete"
            android:textColor="@color/black"
            android:textSize="@dimen/small_middle_text_size" />

        <View
            style="@style/line2"
            android:layout_height="30dip"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/item22"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_update"
            android:textColor="@color/black"
            android:textSize="@dimen/small_middle_text_size" />
    </LinearLayout>

</LinearLayout>