<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/red" 
    android:id="@+id/index1layout">

   <include layout="@layout/top_title_layout"/>
    
     <ImageView 
        android:id="@+id/index_1_sexicon"
        android:layout_height="180dip"
        style="@style/main_icon_style"
        android:src="@drawable/main_index_icon_woman"/>
    
    <TextView
        android:id="@+id/index_1_realname"
        style="@style/main_common_center_text"
        android:textSize="@dimen/large_text_size"
        android:gravity="center"
        android:paddingLeft="0dip"
        android:text="--" />
   
    <TextView
        android:id="@+id/index_1_info"
        android:layout_marginTop="@dimen/margin_10"
        style="@style/main_common_center_text"
        android:textSize="@dimen/micro_text_size"
        android:gravity="center"
        android:paddingLeft="0dip"
        android:text="--"/>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginTop="@dimen/margin_20">
    
     <TextView
        android:id="@+id/index_2_info"
        style="@style/main_common_center_text"
        android:text="家   乡：--"/>
    
     <TextView
        android:id="@+id/index_1_job"
        style="@style/main_common_center_text"
        android:text="职   位：--"/>
    
     <TextView
        android:id="@+id/index_1_phone"
        style="@style/main_common_center_text"
        android:text="手机号：--"/>
     
      <TextView
        android:id="@+id/index_1_email"
        style="@style/main_common_center_text"
        android:text="E-mail：--"/>
	</LinearLayout>
</LinearLayout>
