    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9900FF" >

    <TextView
        style="@style/index_top_text"
        android:text="@string/resume_baseinfo" />
    
     <ImageView 
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:background="@drawable/index_1_base"/>
    
    <TextView
        android:id="@+id/index_1_realname"
        style="@style/index1_text"
        android:textSize="@dimen/large_text_size" />
   
    <TextView
        android:id="@+id/index_1_info"
        style="@style/index1_text"/>
    
     <TextView
        android:id="@+id/index_1_where"
        style="@style/index1_text"/>
    
    <TextView
        android:id="@+id/index_1_lisence"
        style="@style/index1_text"/>
    
     <TextView
        android:id="@+id/index_1_phone"
        style="@style/index1_text"/>
     
      <TextView
        android:id="@+id/index_1_email"
        style="@style/index1_text"/>

</LinearLayout>
