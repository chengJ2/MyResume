<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.me.resume.views.CommScrollView
        style="@style/main_scrollview_style"
        android:padding="0dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="@dimen/margin_20"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/version"
                style="@style/about_app_item_text"
                android:layout_height="30dip"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/app_name" />

            <TextView
                style="@style/about_app_item_text"
                android:layout_marginTop="@dimen/margin_10"
                android:drawableLeft="@drawable/declare_icon"
                android:drawablePadding="@dimen/margin_5"
                android:text="@string/app_declare1" />

            <TextView
                android:id="@+id/declare"
                style="@style/about_app_item_content_text"
                android:text="@string/app_declare3" />

            <TextView
                style="@style/about_app_item_text"
                android:drawableLeft="@drawable/contactus_icon"
                android:drawablePadding="@dimen/margin_5"
                android:text="@string/app_declare2" />

            <TextView
                android:id="@+id/contactus"
                style="@style/about_app_item_content_text"
                android:lineSpacingExtra="3dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/qqcode"
                    style="@style/about_app_item_content_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/qq"
                    android:gravity="center"
                    android:text="@string/contactus_qq_name_note" />

                <TextView
                    android:id="@+id/weixincode"
                    style="@style/about_app_item_content_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/weixin"
                    android:gravity="center"
                    android:text="@string/contactus_weixin" />
            </LinearLayout>
        </LinearLayout>
    </com.me.resume.views.CommScrollView>

</LinearLayout>