<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.me.resume.views.CommScrollView
        style="@style/comm_scrollview_style"
        android:layout_marginBottom="0dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" 
                android:layout_marginTop="@dimen/margin_20"/>
            
             <TextView
	            android:id="@+id/version"
	            android:layout_height="30dip"
	            android:gravity="center"
	            style="@style/about_app_item_text"
	            android:layout_marginTop="@dimen/margin_10"
	            android:text="@string/app_name"
	            android:background="@color/transparent" />

            <TextView
                style="@style/about_app_item_text"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/app_declare1" />

            <TextView
                android:id="@+id/declare"
                style="@style/about_app_item_content_text"
                android:text="@string/app_declare3" />

            <TextView
                style="@style/about_app_item_text"
                android:text="@string/app_declare2" />

            <TextView
                android:id="@+id/contactus"
                style="@style/about_app_item_content_text"/>
        </LinearLayout>
    </com.me.resume.views.CommScrollView>
</LinearLayout>