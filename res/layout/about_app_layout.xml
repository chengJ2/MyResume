<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.me.resume.views.CommScrollView
        style="@style/comm_scrollview_style"
        android:layout_marginBottom="0dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dip"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/about_app_item_text"
                android:text="@string/app_declare1" />

            <TextView
                android:id="@+id/declare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:lineSpacingExtra="3dip"
                android:padding="@dimen/margin_16"
                android:text="@string/app_declare3"
                android:textColor="@color/grey_10"
                android:textSize="@dimen/micro_text_size" />

            <TextView
                style="@style/about_app_item_text"
                android:text="@string/app_declare2" />

            <TextView
                android:id="@+id/contactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="@dimen/margin_16"
                android:textColor="@color/grey_10"
                android:lineSpacingExtra="3dip"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>
    </com.me.resume.views.CommScrollView>

</LinearLayout>