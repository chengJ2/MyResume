<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_50" >

    <com.me.resume.views.CommScrollView
        android:id="@+id/scrollview"
        style="@style/comm_scrollview_style"
        android:layout_margin="@dimen/margin_10"
        android:layout_marginBottom="0dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/charachar_corner"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item1"
                        style="@style/character_content_text"
                        android:background="@color/red"
                        android:text="多血质" />

                    <TextView
                        android:id="@+id/item2"
                        style="@style/character_content_text"
                        android:background="@color/color_green"
                        android:text="胆汁质" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@color/grey_50"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/item3"
                        style="@style/character_content_text"
                        android:background="@color/color_2"
                        android:text="粘液质" />

                    <TextView
                        android:id="@+id/item4"
                        style="@style/character_content_text"
                        android:background="@color/green"
                        android:text="抑郁质" />
                </LinearLayout>
            </LinearLayout>
			
            <ListView
                android:id="@+id/characterListView"
                style="@style/comm_listview_style"
                android:visibility="visible" />
        </LinearLayout>
    </com.me.resume.views.CommScrollView>

</RelativeLayout>