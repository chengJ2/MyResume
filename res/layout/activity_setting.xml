<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_bar_height"
        layout="@layout/top_layout_lable" />

    <com.me.resume.views.CommScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llout01"
                style="@style/noraml_item_setting">

                <TextView
                    style="@style/user_info_item_tv"
                    android:layout_weight="5"
                    android:text="@string/settings_item1" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:paddingTop="10dip"
                    android:paddingLeft="50dip"
                    android:gravity="center|right">

                    <com.me.resume.views.SwitchButton
                        android:id="@+id/setting_start_cb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line3" />

            <LinearLayout
                style="@style/noraml_item"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    style="@style/user_info_item_tv"
                    android:layout_weight="5"
                    android:text="工作经验在预览界面显示" />

                <RadioGroup
                    android:id="@+id/radioGroup_show"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="4" >

                    <RadioButton
                        android:id="@+id/radio_left"
                        style="@style/user_info_item_radio"
                        android:checked="true"
                        android:text="向左" />

                    <RadioButton
                        android:id="@+id/radio_right"
                        style="@style/user_info_item_radio"
                        android:text="向右" />

                    <RadioButton
                        android:id="@+id/radionv_middle"
                        style="@style/user_info_item_radio"
                        android:text="中间" />
                </RadioGroup>

                <ImageView
                    style="@style/user_info_item_iv"
                    android:visibility="invisible" />

            </LinearLayout>

            <View style="@style/line3" />

            <LinearLayout
                android:id="@+id/llout03"
                style="@style/noraml_item_setting">

                <TextView
                    style="@style/user_info_item_tv"
                    android:layout_weight="5"
                    android:text="@string/settings_item2" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="4"
                    android:paddingTop="10dip"
                    android:paddingLeft="50dip"
                    android:gravity="center|right">

                    <com.me.resume.views.SwitchButton
                        android:id="@+id/setting_auto_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <View style="@style/line3"
                android:layout_height="20dip" />
            
            <LinearLayout
                android:id="@+id/llout03"
                style="@style/noraml_item_setting">

                <TextView
                    style="@style/user_info_item_tv"
                    android:layout_weight="5"
                    android:text="@string/settings_item3" />

                <TextView
                    style="@style/user_info_item_tv"
                    android:layout_weight="4"
                    android:gravity="right|center"
                    android:text="V1.0" />
                
                <ImageView
                    style="@style/user_info_item_iv"
                    android:visibility="invisible" />

            </LinearLayout>
            <View style="@style/line3" />
            <LinearLayout
                android:id="@+id/llout03"
                style="@style/noraml_item_setting">

                <TextView
                    style="@style/user_info_item_tv"
                    android:layout_weight="5"
                    android:text="@string/settings_item4" />

                <ImageView
                    style="@style/user_info_item_iv"
                    android:visibility="visible" />

            </LinearLayout>
            <View style="@style/line3" />
            
        </LinearLayout>
    </com.me.resume.views.CommScrollView>

</RelativeLayout>