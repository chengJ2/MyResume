<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toplistitemlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/margin_8"
            android:ellipsize="end"
            android:gravity="left|center_horizontal"
            android:lineSpacingExtra="3dip"
            android:maxLines="4"
            android:singleLine="false"
            android:text="@string/dialog_action_alert"
            android:textColor="@color/black"
            android:textSize="@dimen/middle_text_size_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dip"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/status"
                style="@style/topic_item_bottom_text"
                android:gravity="center|left"
                android:text="已发布"
                android:textColor="@color/grey_10"
                android:textSize="@dimen/home_cover_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/datetime"
                style="@style/topic_item_bottom_text"
                android:gravity="center|right"
                android:text="2016.5.10"
                android:textSize="@dimen/home_cover_text_size" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iconmenu"
        android:layout_width="36dip"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_menu_more_sel"
        android:visibility="visible" />

</LinearLayout>