<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.me.resume.views.CommScrollView 
        style="@style/comm_scrollview_style" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <LinearLayout
                android:id="@+id/llout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/user_info_avatar"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_default_avatar" />
                
                  <LinearLayout
		                android:id="@+id/llout01"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:layout_marginTop="10dip"
		                android:gravity="center"
		                android:orientation="horizontal" >
                
                <TextView
       				 android:id="@+id/center_username"
        			 style="@style/user_center_text"
        			 android:text="程健"
        			 android:textSize="@dimen/large_text_size" />
                
                 <TextView
       				 android:id="@+id/center_workyear"
        			 style="@style/user_center_text"
        			 android:text="|2年工作经验"
        			android:textSize="@dimen/large_text_size" />
   
                </LinearLayout>
            </LinearLayout>

            
        </LinearLayout>
    </com.me.resume.views.CommScrollView>

</RelativeLayout>