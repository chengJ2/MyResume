<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.me.resume.views.CommScrollView 
        style="@style/comm_scrollview_style" 
        android:layout_marginBottom="0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dip"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/user_info_avatar"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_default_avatar" />

                <LinearLayout
                    android:id="@+id/llout02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dip"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/center_username"
                        style="@style/user_center_text"
                        android:text="程健"/>

                    <TextView
                        android:id="@+id/center_workyear"
                        style="@style/user_center_text"
                        android:text="|2年工作经验" />
                    <TextView
                        android:id="@+id/center_city"
                        style="@style/user_center_text"
                        android:text="|武汉"/>
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/llout03"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:layout_gravity="center"
                android:layout_marginTop="20dip"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/icon_collection_small"
                    android:gravity="center"
                    android:text="@string/personal_c_item1"
                    android:textColor="@color/grey_10"
                    android:textSize="@dimen/small_middle_text_size" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/icon_sun_mode"
                    android:gravity="center"
                    android:text="@string/personal_c_item2"
                    android:textColor="@color/grey_10"
                    android:textSize="@dimen/small_middle_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/icon_review_small"
                    android:gravity="center"
                    android:text="@string/personal_c_item3"
                    android:textColor="@color/grey_10"
                    android:textSize="@dimen/small_middle_text_size" />
            </LinearLayout>

            <View style="@style/line_h15" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/feedbackLayout"
                    style="@style/noraml_item" >

                    <TextView
                        style="@style/user_info_item_tv"
                        android:layout_weight="5"
                        android:text="@string/resume_jobintension"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="100dip"
                    	android:layout_height="match_parent"
                        android:text="@string/personal_c_item11"
                        android:gravity="center|right"
                        android:textColor="@color/grey_10"
                   	 	android:textSize="@dimen/small_text_size"
                        android:drawableRight="@drawable/arrows_right"
                        android:visibility="visible" />
                </LinearLayout>

                <View style="@style/line_padding10" />

                <LinearLayout
                    android:id="@+id/feedbackLayout"
                    style="@style/noraml_item" >

                    <TextView
                        style="@style/user_info_item_tv"
                        android:layout_weight="5"
                        android:text="@string/resume_education"
                        android:textColor="@color/black" />

                   <TextView
                        android:layout_width="150dip"
                    	android:layout_height="match_parent"
                        android:text="完整度(70%)"
                        android:gravity="center|right"
                        android:textColor="@color/grey_10"
                   	 	android:textSize="@dimen/small_text_size"
                        android:drawableRight="@drawable/arrows_right"
                        android:visibility="visible" />
                </LinearLayout>

                <View style="@style/line_padding10" />

                <LinearLayout
                    android:id="@+id/feedbackLayout"
                    style="@style/noraml_item" >

                    <TextView
                        style="@style/user_info_item_tv"
                        android:layout_weight="5"
                        android:text="@string/resume_workexperience2"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="150dip"
                    	android:layout_height="match_parent"
                        android:text="完整度(90%)"
                        android:gravity="center|right"
                        android:textColor="@color/grey_10"
                   	 	android:textSize="@dimen/small_text_size"
                        android:drawableRight="@drawable/arrows_right"
                        android:visibility="visible" />
                </LinearLayout>
                
                <View style="@style/line_padding10" />

                <LinearLayout
                    android:id="@+id/feedbackLayout"
                    style="@style/noraml_item" >

                    <TextView
                        style="@style/user_info_item_tv"
                        android:layout_weight="5"
                        android:text="@string/resume_project_experience"
                        android:textColor="@color/black" />

                    <ImageView
                        style="@style/user_info_item_iv"
                        android:visibility="visible" />
                </LinearLayout>
                <View style="@style/line_padding10" />
            </LinearLayout>
        </LinearLayout>
    </com.me.resume.views.CommScrollView>

</RelativeLayout>