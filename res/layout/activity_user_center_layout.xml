<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.me.resume.views.CommScrollView style="@style/comm_scrollview_style" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <LinearLayout
                android:id="@+id/llout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="55dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/per_info_tv"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="6.6"
                    android:text="个人头像"
                    android:textColor="#787777"
                    android:textSize="14dip" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:minHeight="55dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/user_info_avatar"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/user_default_avatar" />
                </LinearLayout>

                 <ImageView
                    style="@style/user_info_item_iv"
                    android:visibility="invisible" />
            </LinearLayout>

            <View style="@style/line3" />
            
        </LinearLayout>
    </com.me.resume.views.CommScrollView>

</RelativeLayout>