<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/msgText"
        style="@style/comm_nodata_style"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <com.me.resume.views.CommScrollView
        android:id="@+id/viewlayout"
        style="@style/comm_scrollview_style"
        android:layout_marginBottom="0dip"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <com.me.resume.views.MarqueeText
                android:id="@+id/topic_title"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:paddingLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_20"
                android:gravity="center"
                android:singleLine="true"
                android:text="职场跟对人很重要？但如何跟对人呢？"
                android:textColor="@color/grey_10"
                android:textSize="@dimen/small_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/topic_from"
                    style="@style/topic_item_bottom_text"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/margin_10"
                    android:text="今日头条" />

                <TextView
                    android:id="@+id/topic_datetime"
                    style="@style/topic_item_bottom_text"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/margin_10"
                    android:text="2016.5.10" />
            </LinearLayout>

            <ImageView
                android:id="@+id/topic_frompic"
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_marginTop="@dimen/margin_10"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/topic_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:lineSpacingExtra="3dip"
                android:padding="@dimen/margin_8"
                android:text="         2016求职找工作的8条经验2016求职找工作的8条经验2016求职找工作的8条经验2016求职找工作的8条经验2016求职找工作的8条经验2016求职找工作的8条经验"
                android:textColor="@color/t_primary"
                android:textSize="@dimen/small_text_size" />

            <ImageView
                android:id="@+id/topic_frompic2"
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_marginTop="@dimen/margin_10"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/topic_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:lineSpacingExtra="3dip"
                android:padding="@dimen/margin_8"
                android:text=""
                android:textColor="@color/t_primary"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>
    </com.me.resume.views.CommScrollView>
    
    <com.me.resume.views.CustomFAB
        android:id="@+id/top"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        style="@style/fab_button_right_style" 
        android:src="@drawable/icon_btn_top"/>
</RelativeLayout>