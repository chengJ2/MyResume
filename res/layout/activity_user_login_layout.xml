<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    android:id="@+id/user_login_layout" >

    <LinearLayout
        android:id="@+id/userpwdLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dip"
        android:background="@drawable/editbox"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edtTxt_username"
            style="@style/userinfo_item_style"
            android:drawableLeft="@drawable/usericon"
            android:hint="@string/login_input_hint" />

        <View style="@style/line" />

        <EditText
            android:id="@+id/edtTxt_password"
            style="@style/userinfo_item_style"
            android:drawableLeft="@drawable/pwdicon"
            android:hint="@string/login_input2_hint"
            android:inputType="textPassword" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/savelayout"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_below="@id/userpwdLayout"
        android:layout_marginTop="10dip" >

        <ImageView
            android:id="@+id/save_checkbox"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/checkbox_sel" />

        <TextView
            android:id="@+id/savePassWord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/save_checkbox"
            android:gravity="center"
            android:text="@string/action_login_savepwd"
            android:textColor="@color/grey_10"
            android:textSize="@dimen/micro_text_size" />

        <TextView
            android:id="@+id/forgotPassWord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="@string/action_login_forgotpwd"
            android:textColor="@color/red"
            android:textSize="@dimen/micro_text_size" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        style="@style/button_menu"
        android:layout_below="@id/savelayout"
        android:layout_marginTop="10dip"
        android:text="@string/action_login" />

    <LinearLayout
        android:id="@+id/login_pt_layout"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:paddingLeft="10dip"
            android:text="@string/action_login_3pl"
            android:textColor="@color/grey_10"
            android:textSize="@dimen/small_middle_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="10dip" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/tencent_qq" 
                android:scaleType="centerInside"/>

            <ImageView
               android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sina_wb"
                android:scaleType="centerInside"/>
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>