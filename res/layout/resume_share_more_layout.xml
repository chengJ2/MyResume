<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical" 
    android:id="@+id/sharemore_layout">

    <ListView
        android:id="@+id/reviewsharemoreListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="62dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:cacheColorHint="#00000000"
        android:divider="@color/grey"
        android:dividerHeight="1px"
        android:footerDividersEnabled="true"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:visibility="visible" />

    <TextView
        android:id="@+id/msgtext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/item_text43"
        android:textColor="@color/grey_10"
        android:textSize="@dimen/small_text_size"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/shareLayout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/share_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dip"
            android:background="@drawable/editbox"
            android:hint="我也来分享..."
            android:textColor="@color/grey_50"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputshareLayout"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/input_share"
            style="@style/user_info_item_ed"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_margin="10dip"
            android:background="@drawable/editbox"
            android:gravity="left"
            android:hint="我也来分享..."
            android:lineSpacingExtra="3dip"
            android:imeOptions="actionDone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/grey"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_weight="1"
                android:gravity="left|center"
                android:paddingLeft="10dip"
                android:text="优质的分享将会置顶哦~"
                android:textColor="@color/grey_10"
                android:textSize="@dimen/small_text_size" />

            <Button
                android:id="@+id/submit_btn"
                style="@style/button_menu"
                android:layout_width="match_parent"
                android:layout_height="34dip"
                android:layout_weight="2"
                android:text="提交"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>