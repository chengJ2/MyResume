<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:id="@+id/sharemore_layout">

    <com.me.resume.views.XListView
        android:id="@+id/reviewsharemoreListView"
        style="@style/comm_listview_style"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_marginBottom="60dip"
        android:footerDividersEnabled="false"
        android:visibility="gone" />

    <TextView
        android:id="@+id/msgtext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/item_text43"
        android:textColor="@color/grey_10"
        android:textSize="@dimen/small_text_size"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/shareLayout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_50"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/share_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dip"
            android:background="@drawable/editbox"
            android:hint="@string/item_text8"
            android:gravity="center|left"
            android:textColor="@color/grey_50"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputshareLayout"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_50"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <EditText
            android:id="@+id/input_share"
            style="@style/user_info_item_ed"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_margin="10dip"
            android:background="@drawable/editbox"
            android:gravity="left"
            android:singleLine="false"
            android:hint="@string/item_text8"
            android:lineSpacingExtra="3dip"
            android:imeOptions="actionDone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_weight="1"
                android:gravity="left|center"
                android:paddingLeft="10dip"
                android:text="@string/item_text81"
                android:textColor="@color/grey_10"
                android:textSize="@dimen/small_text_size" />

            <Button
                android:id="@+id/submit_btn"
                style="@style/button_menu"
                android:layout_width="match_parent"
                android:layout_height="34dip"
                android:layout_weight="2"
                android:text="@string/action_submit"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>