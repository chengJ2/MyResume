<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_40"
        android:background="@drawable/dialog_corner"
        android:orientation="vertical"
        android:paddingBottom="10dip" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="center"
                android:background="@color/top_bar"
                android:text="@string/action_notice"
                android:textColor="@color/white"
                android:textSize="@dimen/small_middle_text_size" />


        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dip"
            android:padding="@dimen/margin_10"
            android:paddingBottom="5dip"
            android:maxLines="5"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/dialog_corner"
            android:orientation="horizontal"
            android:paddingBottom="0dip" >

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="50dip"
                android:layout_height="35dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn2_corner"
                android:gravity="center"
                android:text="@string/show_button_cancle"
                android:textColor="@color/white"
                android:textSize="@dimen/small_middle_text_size"/>

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="50dip"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_corner"
                android:gravity="center"
                android:text="@string/show_button_sure"
                android:textColor="@color/white"
                android:textSize="@dimen/small_middle_text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>