<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical" 
    android:id="@+id/index3layout">

   <include layout="@layout/top_title_layout"/>

    <com.me.resume.views.CommScrollView
        style="@style/main_scrollview_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical" >
            
		    <ImageView
		        android:layout_width="match_parent"
		        android:layout_height="100dip"
		        android:background="@drawable/main_index_icon3" />
            
            <LinearLayout
                android:id="@+id/llout01"
                android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:orientation="vertical"
            	android:padding="@dimen/margin_10" >
                
                <TextView
                    android:id="@+id/self_evaluation"
            		style="@style/main_common_text"
            		android:textSize="@dimen/small_middle_text_size"
                    android:layout_marginTop="@dimen/margin_10"
                    android:lineSpacingExtra="3dip"
                    android:text="" />
                
                <com.me.resume.views.TagFlowLayout 
                    android:id="@+id/flowlayout"
                    android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:layout_gravity="center"
            		android:layout_marginTop="50dip"/>
            </LinearLayout>
        </LinearLayout>
    </com.me.resume.views.CommScrollView>

</LinearLayout>