<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical" 
    android:id="@+id/index2layout">

    <TextView
        style="@style/index_top_text"
        android:text="@string/resume_workexperience" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:background="@drawable/index_1_base" />

    <TextView
        android:id="@+id/index_1_info"
        style="@style/index1_text"
        android:gravity="center"
        android:paddingLeft="0dip"
        android:text="bbbbbbbbbbbbb"
        android:visibility="gone" />

    <ListView
        android:id="@+id/weListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="0px"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="visible" />

</LinearLayout>