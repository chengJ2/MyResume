<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/useregisterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dip"
        android:background="@drawable/editbox"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/regTxt_username"
            style="@style/userinfo_item_style"
            android:drawableLeft="@drawable/usericon"
            android:hint="@string/login_input1_hint" />

        <View style="@style/line_padding10" />

        <EditText
            android:id="@+id/regTxt_password"
            style="@style/userinfo_item_style"
            android:drawableLeft="@drawable/pwdicon"
            android:hint="@string/login_input2_hint"
            android:inputType="textPassword" />

        <View style="@style/line_padding10" />

        <EditText
            android:id="@+id/regTxt2_password"
            style="@style/userinfo_item_style"
            android:drawableLeft="@drawable/pwdicon"
            android:hint="@string/login_input3_hint"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/savelayout"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_below="@id/useregisterLayout"
        android:layout_marginLeft="24dip"
        android:layout_marginRight="24dip"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/protocol_cb"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/checkbox_sel"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center|left"
            android:text="@string/register_protocol"
            android:textColor="@color/grey_10"
            android:textSize="@dimen/small_middle_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        style="@style/button_menu"
        android:layout_below="@id/savelayout"
        android:layout_marginTop="35dip"
        android:text="@string/action_register" />
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:layout_margin="@dimen/margin_10"
        android:textSize="@dimen/micro_text_size"
        android:textColor="@color/grey_10"
        android:lineSpacingExtra="3dip"
        android:text="(备注:每个用户只能注册一次,请注意同步资料！ 若想重新注册,请清除本地缓存)"/>

    <TextView
        android:id="@+id/acclogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center|left"
        android:text="@string/account_go_login"
        android:textColor="@color/grey_10"
        android:textSize="@dimen/small_middle_text_size" />

</RelativeLayout>