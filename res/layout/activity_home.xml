<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true" >

    <com.me.resume.views.CommScrollView 
        style="@style/comm_scrollview_style" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <TextView
                    style="@style/home_item_text"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/item_text2" />

                <TextView
                    style="@style/home_item_text"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:text="@string/item_text21" />
            </RelativeLayout>

             <GridView
                 android:id="@+id/grid"
                 android:layout_width="match_parent"
                 android:layout_height="190dip"
           		 android:layout_margin="10dp"
                 android:columnWidth="80dp"
                 android:fadingEdge="none"
                 android:fadingEdgeLength="0dip"
                 android:gravity="center"
                 android:listSelector="@android:color/transparent"
                 android:numColumns="auto_fit"
                 android:scrollbars="none"
                 android:scrollingCache="false"
                 android:smoothScrollbar="true"
                 android:stretchMode="columnWidth" >
             </GridView>

            <TextView
                style="@style/home_item_text"
                android:text="@string/item_text3" />

            <GridView
                android:id="@+id/xgln_gridview"
                android:layout_width="match_parent"
                android:layout_height="140dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:columnWidth="100dp"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dip"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:scrollingCache="false"
                android:smoothScrollbar="true"
                android:stretchMode="columnWidth">
            </GridView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <TextView
                    style="@style/home_item_text"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/item_text4" />

                <TextView
                    android:id="@+id/sharemore"
                    style="@style/home_item_text"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:text="@string/item_text21" />
            </RelativeLayout>

            <ListView
                android:id="@+id/reviewsharingListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@android:color/transparent"
                android:dividerHeight="0px"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"
                android:visibility="gone" />

            <TextView
                android:id="@+id/nodata"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:gravity="center"
                android:text="@string/item_text42"
                android:textColor="@color/grey"
                android:textSize="@dimen/small_text_size"
                android:visibility="visible" />
        </LinearLayout>
    </com.me.resume.views.CommScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/make_btn"
            style="@style/button_menu"
            android:layout_weight="1"
            android:text="@string/edit_resume" />

        <Button
            android:id="@+id/review_btn"
            style="@style/button_menu"
            android:layout_weight="1"
            android:text="@string/review_resume"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>