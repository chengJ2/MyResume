<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" 
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/dialog_corner"
        android:orientation="vertical"
        android:paddingBottom="10dip" >
        
         <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_corner"
         android:layout_marginTop="3dip" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="6dip"
            android:layout_marginTop="3dip" 
            android:text="@string/action_notice"
            android:textColor="@color/grey_10"
            android:textSize="@dimen/small_middle_text_size" />
        
        </RelativeLayout>

        <View
            style="@style/line3"
            android:layout_marginTop="4dip" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dip"
            android:padding="@dimen/margin_8"
            android:text="@string/dialog_action_delete_alert"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />
        
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_8"
            android:text="@string/dialog_action_delete_sure_alert"
            android:textColor="@color/red"
            android:textSize="@dimen/micro_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/dialog_corner"
            android:orientation="horizontal"
            android:paddingBottom="5dip" >

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="50dip"
                android:layout_height="35dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn2_corner"
                android:gravity="center"
                android:text="@string/show_button_cancle"
                android:textColor="@color/white"
                android:textSize="@dimen/small_middle_text_size"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="50dip"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_corner"
                android:gravity="center"
                android:text="@string/show_button_sure"
                android:textColor="@color/white"
                android:textSize="@dimen/small_middle_text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>