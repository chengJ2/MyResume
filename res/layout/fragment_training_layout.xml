<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.me.resume.views.CommScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:scrollbars="none" 
        android:layout_below="@id/top">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="55dip"
                 android:paddingLeft="20dip"
                android:orientation="horizontal" >

                <TextView
                   style="@style/user_info_item_tv"
                    android:text="@string/ed_info_time" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/info_startworktime"
                        style="@style/user_info_item_ed"
                        android:layout_weight="3.5"
                        android:hint="@string/we_info_choose_worktime2" />

                    <TextView
                        style="@style/user_info_item_ed"
                        android:layout_marginLeft="2dip"
                        android:layout_weight="1"
                        android:text="@string/tag_time_between" />

                    <TextView
                        android:id="@+id/info_endworktime"
                        style="@style/user_info_item_ed"
                        android:layout_marginLeft="0dip"
                        android:layout_weight="3.5"
                        android:hint="@string/we_info_choose_worktime2" />
                </LinearLayout>
            </LinearLayout>
            
             <View style="@style/line3" />
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="55dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                 android:paddingLeft="20dip"
                android:orientation="horizontal" >

                <TextView
                   style="@style/user_info_item_tv"
                    android:text="@string/ed_info_trainingorganization" />

                <EditText
                    android:id="@+id/info_trainingorganization"
                    style="@style/user_info_item_ed"
                    android:hint="@string/ed_info_input_trainingorganization" />
                 <ImageView
                    style="@style/user_info_item_iv"
                    android:visibility="invisible" />
            </LinearLayout>
             <View style="@style/line3" />
             
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="55dip"
                android:orientation="horizontal"
                android:paddingLeft="20dip"
                android:visibility="visible" >

                <TextView
                    style="@style/user_info_item_tv"
                    android:text="@string/ed_info_input_trainingclass"/>

                <EditText
                    android:id="@+id/info_trainingclass"
                    style="@style/user_info_item_ed"
                    android:hint="@string/ed_info_trainingclass" />
                 <ImageView
                    style="@style/user_info_item_iv"
                    android:visibility="invisible" />
            </LinearLayout>
            <View style="@style/line3" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="55dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                 android:paddingLeft="20dip"
                android:orientation="horizontal" >

                <TextView
                   style="@style/user_info_item_tv"
                    android:text="@string/ed_info_certificate" />

                <EditText
                    android:id="@+id/info_certificate"
                    style="@style/user_info_item_ed"
                    android:hint="@string/ed_info_input_certificate" />
                 <ImageView
                    style="@style/user_info_item_iv"
                    android:visibility="invisible" />
            </LinearLayout>
             <View style="@style/line3" />
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="150dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                 android:paddingLeft="20dip"
                android:orientation="horizontal" >

                <TextView
                   style="@style/user_info_item_tv"
                    android:text="@string/ed_info_description" />

                <EditText
                    android:id="@+id/info_description"
                    style="@style/user_info_item_ed"
                    android:hint="@string/ed_info_input_description"
                    android:singleLine="false" />
                 <ImageView
                    style="@style/user_info_item_iv"
                    android:visibility="invisible" />
            </LinearLayout>
            <View style="@style/line3" />
        </LinearLayout>
    </com.me.resume.views.CommScrollView>
</RelativeLayout>