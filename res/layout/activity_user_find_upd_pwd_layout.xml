<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/pwdTxt_username"
        style="@style/userinfo_item_style"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/editbox"
        android:drawableLeft="@drawable/usericon"
        android:hint="@string/login_input1_hint"
        android:imeOptions="actionDone"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/userpwdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/editbox"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="visible" >

        <EditText
	        android:id="@+id/pwdTxt2_username"
	        style="@style/userinfo_item_style"
	        android:drawableLeft="@drawable/usericon"
	        android:hint="@string/login_input1_hint"
	        android:visibility="gone" />
        
         <View style="@style/line_padding10" 
             android:id="@+id/line" 
             android:visibility="gone"/>
        
        <EditText
            android:id="@+id/new_Txt_password"
            style="@style/userinfo_item_style"
            android:drawableLeft="@drawable/pwdicon"
            android:hint="@string/login_input_old_pwd_hint"
            android:inputType="textPassword" />

        <View style="@style/line_padding10" />

        <EditText
            android:id="@+id/new_Txt2_password"
            style="@style/userinfo_item_style"
            android:drawableLeft="@drawable/pwdicon"
            android:hint="@string/login_input_snew_pwd_hint"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_pwd"
        style="@style/button_menu"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_weight="0"
        android:text="@string/show_button_sure" />

</LinearLayout>