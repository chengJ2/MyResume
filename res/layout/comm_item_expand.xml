<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandLayoyut"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_item_height"
    android:background="@color/grey_30" >

    <TextView
        android:id="@+id/expand_text"
        style="@style/home_item_text"
        android:layout_height="@dimen/home_item_height"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/margin_10"
        android:text="@string/baseinfo_xt_item" />

    <ImageView
        android:id="@+id/arrow_updown"
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/icon_arrow_down" />
</RelativeLayout>