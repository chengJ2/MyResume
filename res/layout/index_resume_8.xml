<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/top_bar" >
    
     <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="70dip"
        android:src="@drawable/msgboard"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>
    
      <TextView
        android:id="@+id/item1"
        style="@style/index_top_text"
        android:layout_marginTop="25dip"
        android:textColor="@color/red"
        android:text="@string/resume_message" />
     
	<TextView
        android:id="@+id/item2"
        style="@style/main_common_text"
        android:paddingLeft="50dip"
        android:paddingRight="50dip"
        android:layout_marginTop="110dip"
        android:lineSpacingExtra="@dimen/margin_8"
        android:textSize="@dimen/small_text_size"
        android:text="@string/resume_mywords"
        android:textColor="@color/black" />
    
   <!--  <ImageView 
        android:id="@+id/gohome"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:src="@drawable/icon_gohome"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/> -->
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/top_bar"
	    android:layout_alignParentBottom="true"  >
    
     <TextView
        android:id="@+id/gohome"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/middle_text_size_dp"
        android:text="@string/resume_home"
        android:drawableTop="@drawable/icon_gohome_def"
        android:drawablePadding="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_16"/>
    
    <TextView
        android:id="@+id/exit_review"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/middle_text_size_dp"
        android:text="@string/resume_exit"
        android:drawableTop="@drawable/icon_exit_def"
        android:drawablePadding="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_16"
        android:visibility="gone"/>
    </LinearLayout>
    
    <TextView
        android:gravity="center"
        style="@style/main_common_text"
        android:layout_height="match_parent"
        android:textColor="@color/top_bar"
        android:textSize="@dimen/blarge_text_size"
        android:text="@string/resume_thinks"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_10"
        android:visibility="gone" />
    
</RelativeLayout>
