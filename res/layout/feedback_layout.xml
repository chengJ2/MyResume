<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
     <EditText
       android:id="@+id/feeddesc"
       android:layout_width="match_parent"
       android:layout_height="200dip"
       android:layout_margin="20dip"
       android:gravity="left"
       android:padding="10dip"
       android:hint="@string/feedback_ed_1" 
       android:singleLine="false"
       android:lineSpacingExtra="5dip"
       android:background="@drawable/feedback_ed_corner"/>
    
     <EditText
       android:id="@+id/feedcontact"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:layout_marginLeft="20dip"
       android:layout_marginRight="20dip"
       android:layout_marginBottom="20dip"
       android:hint="@string/feedback_ed_2" 
       android:singleLine="true"
       android:background="@drawable/feedback_ed_corner"/>
    
      <Button
         android:id="@+id/feedcommit"
         style="@style/button_menu"
         android:layout_margin="20dip"
         android:text="@string/feedback_ed_3" />
     
     
</LinearLayout>