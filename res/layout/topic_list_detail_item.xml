<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toplistitemlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/topic_icon"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_8"
        android:scaleType="fitXY"
        android:src="@drawable/null_image"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dip"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/topic_title"
            style="@style/user_center_text"
            android:layout_weight="1"
            android:gravity="top|left"
            android:text="@string/dialog_action_cache_alert"
            android:textColor="@color/t_primary"
            android:textSize="@dimen/small_text_size"
            android:lineSpacingExtra="2dip"
            android:singleLine="false"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- <TextView
            android:id="@+id/topic_content"
            android:layout_width="match_parent"
            android:layout_height="36dip"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/margin_5"
            android:ellipsize="end"
            android:gravity="left|center_horizontal"
            android:lineSpacingExtra="3dip"
            android:maxLines="2"
            android:singleLine="false"
            android:text="@string/dialog_action_alert"
            android:textColor="@color/grey_10"
            android:textSize="@dimen/home_cover_text_size"
            android:visibility="gone" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/topic_from"
                style="@style/topic_item_bottom_text"
                android:text="@string/app_name"
                android:textColor="@color/red"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/topic_datetime"
                style="@style/topic_item_bottom_text"
                android:text="--"
                android:gravity="center|right"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>