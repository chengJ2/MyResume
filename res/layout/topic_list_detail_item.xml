<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toplistitemlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/topic_icon"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_8"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_margin="@dimen/margin_8"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/topic_title"
            style="@style/user_center_text"
            android:layout_height="18dip"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="@string/dialog_action_cache_alert"
            android:textColor="@color/t_primary"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/topic_content"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/margin_10"
            android:ellipsize="end"
            android:gravity="left|center_horizontal"
            android:lineSpacingExtra="3dip"
            android:maxLines="2"
            android:singleLine="false"
            android:text="@string/dialog_action_alert"
            android:textColor="@color/grey_10"
            android:textSize="@dimen/micro_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/topic_from"
                style="@style/topic_item_bottom_text"
                android:text="今日头条"
                android:gravity="center|left"/>

            <TextView
                android:id="@+id/topic_datetime"
                style="@style/topic_item_bottom_text"
                android:text="2016.5.10"
                android:gravity="center|right"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>