<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" 
    android:orientation="horizontal">
    
    <ImageView
         android:id="@+id/topic_icon"
         android:layout_width="70dip"
         android:layout_height="70dip"
         android:layout_gravity="center"
         android:src="@drawable/ic_launcher"
         android:scaleType="fitXY"
         android:visibility="visible" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/white"
         android:padding="@dimen/margin_8"
         android:orientation="vertical" >
               
           <TextView
    			 android:id="@+id/topic_title"
    			 android:layout_height="18dip"
     			 style="@style/user_center_text"
     			 android:text="@string/dialog_action_cache_alert"
     			 android:singleLine="true"
     			 android:paddingRight="@dimen/margin_10"
     			 android:gravity="center|left"
     			 android:textSize="@dimen/small_text_size" 
     			 android:textColor="@color/black"/>
             
    	
          <TextView
     			android:id="@+id/topic_content"
     			android:layout_height="40dip"
      			 style="@style/user_center_text"
      			 android:maxLines="2"
      			 android:singleLine="false"
      			 android:lineSpacingExtra="2dip"
      			 android:layout_marginTop="8dip"
      			 android:paddingRight="8dip"
      			 android:gravity="left"
      			 android:layout_gravity="left"
      			 android:text="@string/dialog_action_alert"
      			 android:textSize="@dimen/micro_text_size"
      			 android:textColor="@color/grey_10" />
         
         <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="20dip"
              android:layout_marginTop="5dip"
              android:gravity="center|left" >
                
                <TextView
       				 android:id="@+id/topic_from"
        			 style="@style/user_center_text"
        			 android:layout_alignParentLeft="true"
        			 android:text="今日头条"
        			 android:textSize="@dimen/microd_text_size" 
        			 android:textColor="@color/grey_10"/>
                
                 <TextView
       				 android:id="@+id/topic_datime"
        			 style="@style/user_center_text"
        			 android:layout_alignParentRight="true"
        			 android:text="2016.5.10"
        			 android:paddingRight="10dip"
        			android:textSize="@dimen/microd_text_size"
        			android:textColor="@color/grey_10" />
   
         </RelativeLayout>
         
    </LinearLayout>
</LinearLayout>