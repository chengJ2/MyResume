    </style>
    
    <style name="about_app_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/grey_10</item>
        <item name="android:layout_height">@dimen/home_item_height</item>
        <item name="android:background">@color/grey_50</item>
        <item name="android:textSize">@dimen/small_middle_text_size</item>
        <item name="android:padding">5dip</item>
        <item name="android:gravity">center|left</item>
        <item name="android:typeface">serif</item>
    </style>
    
    <style name="address_item_text" parent="@style/home_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_item_height</item>
    </style>
    
     <style name="address_item_left_text" parent="@style/home_item_text">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawableLeft">@drawable/location</item>
    </style>
    
     <style name="search_item_right_text" parent="@style/home_item_text">
         <item name="android:layout_width">50dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="home_item_more">
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/more</item>
    </style>
    
    <style name="home_content_grilview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:layout_marginLeft">@dimen/margin_10</item>
        <item name="android:layout_marginRight">@dimen/margin_10</item>
        <item name="android:columnWidth">@dimen/home_content_gridview_columnWidth</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dip</item>
