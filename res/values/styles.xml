<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Default" parent="@android:style/Theme.Black">
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Default.NoTitleBar" parent="@style/Default">
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> -->
    </style>

    <style name="user_info_item_tv">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/user_edit_text</item>
        <item name="android:textSize">@dimen/small_middle_text_size</item>
        <item name="android:singleLine">false</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="user_info_item_ed">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_weight">6</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/user_info_edit_hint</item>
        <item name="android:textSize">@dimen/small_middle_text_size</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">serif</item>
    </style>
    
    <style name="user_info_item_radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_middle_text_size</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
         <item name="android:button">@null</item>
         <item name="android:drawableLeft">@drawable/icon_radio</item>
         <item name="android:drawablePadding">5dip</item>
    </style>
    
    <style name="user_info_item_iv">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/arrows_right</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:layout_marginLeft">@dimen/line_margin</item>
        <item name="android:layout_marginRight">@dimen/line_margin</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="line2">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="line3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line</item>
    </style>
    
    <style name="line_padding10" parent="@style/line3">
        <item name="android:layout_marginLeft">@dimen/line_margin_10</item>
        <item name="android:layout_marginRight">@dimen/line_margin_10</item>
    </style>
    
    <style name="line_h15">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height_16</item>
        <item name="android:background">@color/line</item>
    </style>

    <!-- 界面按钮 -->
    <style name="button_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:background">@drawable/button_select</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/btn_text_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_text_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:typeface">serif</item>
    </style>
    
    <!-- 一般Item项Parent -->
     <style name="noraml_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normal_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/normal_item_padding_left</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
     <style name="noraml_item_mul" parent="@style/noraml_item">
        <item name="android:layout_height">@dimen/mul_item_height</item>
    </style>
    
     <!-- 用户信息列表 -->
	   <style name="userinfo_item_style">
	      <item name="android:layout_width">match_parent</item>
	      <item name="android:layout_height">48dip</item>
	      <item name="android:textColor">@color/black</item>
	      <item name="android:textSize">@dimen/small_middle_text_size</item>
	      <item name="android:textColorHint">#c4c4c4</item>
	      <item name="android:padding">5dip</item>
	      <item name="android:background">@null</item>
	      <item name="android:singleLine">true</item>
	      <item name="android:drawablePadding">8dip</item>
	      <item name="android:typeface">serif</item>
	 </style>
    
      <style name="my_pb"   parent="@android:style/Widget.ProgressBar.Horizontal">
	    <item name="android:indeterminateOnly">false</item>
	    <item name="android:progressDrawable">@drawable/progressbar_style</item>
	   <!--  <item name="android:indeterminateDrawable">@drawable/progressbar_indeter</item>
	    <item name="android:minHeight">20dip</item>
	    <item name="android:maxHeight">20dip</item> -->
	</style>
	
       <!-- 列表提示消息 -->
	   <style name="comm_errormsg_style">
	      <item name="android:layout_width">match_parent</item>
	      <item name="android:layout_height">wrap_content</item>
	      <item name="android:textColor">@color/red</item>
	      <item name="android:textSize">@dimen/small_middle_text_size</item>
	      <item name="android:padding">10dip</item>
	      <item name="android:gravity">center|left</item>
	      <item name="android:background">@color/grey_50</item>
	      <item name="android:ellipsize">marquee</item>
	      <item name="android:focusable">true</item>
	      <item name="android:marqueeRepeatLimit">marquee_forever</item>
	      <item name="android:singleLine">true</item>
	      <item name="android:typeface">serif</item>
	 </style>
	 
	   <style name="index_top_text">
	      <item name="android:layout_width">match_parent</item>
	      <item name="android:layout_height">60dip</item>
	      <item name="android:textColor">@color/white</item>
	      <item name="android:textSize">@dimen/large_text_size</item>
	      <item name="android:gravity">center</item>
	      <item name="android:typeface">serif</item>
	 </style>
	   
	   <style name="index1_text">
	      <item name="android:layout_width">match_parent</item>
	      <item name="android:layout_height">wrap_content</item>
	      <item name="android:textColor">@color/white</item>
	      <item name="android:textSize">@dimen/small_middle_text_size</item>
	      <item name="android:paddingLeft">20dip</item>
	      <item name="android:gravity">center|left</item>
	      <item name="android:layout_marginTop">8dip</item>
	      <item name="android:background">@android:color/transparent</item>
	      <item name="android:typeface">serif</item>
	 </style>
	 
	   <style name="user_center_text">
	       <item name="android:layout_width">wrap_content</item>
	      <item name="android:layout_height">match_parent</item>
	      <item name="android:textColor">@color/black</item>
	       <item name="android:textSize">@dimen/medium_text_size</item>
	         <item name="android:background">@android:color/transparent</item>
	         <item name="android:gravity">center|left</item>
	      <item name="android:typeface">serif</item>
	 </style>
	 
	   <style name="home_item_text">
	      <item name="android:layout_width">match_parent</item>
	      <item name="android:layout_height">40dip</item>
	      <item name="android:textColor">@color/grey_10</item>
	      <item name="android:textSize">@dimen/small_middle_text_size</item>
	      <item name="android:padding">5dip</item>
	      <item name="android:gravity">center|left</item>
	      <item name="android:typeface">serif</item>
	 </style>
	 
	   <style name="fab_button_style">
	      <item name="android:layout_width">50dip</item>
	      <item name="android:layout_height">match_parent</item>
	      <item name="android:layout_alignParentBottom">true</item>
	      <item name="android:layout_centerHorizontal">true</item>
	      <item name="android:src">@drawable/ic_btn_edit</item>
	 </style>
	 
	   <style name="fab_button_left_style" parent="@style/fab_button_style">
	      <item name="android:layout_alignParentLeft">true</item>
	      <item name="android:layout_marginLeft">10dip</item>
	       <item name="android:src">@drawable/ic_btn_add</item>
	 </style>
	 
	   <style name="fab_button_right_style" parent="@style/fab_button_style">
	      <item name="android:layout_alignParentBottom">true</item>
	      <item name="android:layout_alignParentRight">true</item>
	      <item name="android:layout_marginRight">10dip</item>
	       <item name="android:src">@drawable/ic_btn_next</item>
	 </style>
	 
	   <style name="comm_scrollview_style">
	       <item name="android:layout_width">match_parent</item>
	       <item name="android:layout_height">match_parent</item>
	       <item name="android:fadingEdge">none</item>
	       <item name="android:fadingEdgeLength">0dip</item>
	       <item name="android:overScrollMode">never</item>
	       <item name="android:scrollbars">none</item>
	       <item name="android:fillViewport">true</item>
	       <item name="android:background">@color/white</item>
	       <item name="android:layout_marginBottom">52dip</item>
	   </style>

</resources>